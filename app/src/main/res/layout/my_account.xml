<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.liuzhuang.afgridlayout.AutoFitGridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        app:columnCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/apparel"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/beauty"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/shoes"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/electronics"
            android:gravity="center" />



    </com.liuzhuang.afgridlayout.AutoFitGridLayout>


</LinearLayout>